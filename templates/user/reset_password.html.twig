{% extends 'base.html.twig' %}

{% block title %}Activation du compte{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="cardShadow">
                <div class="cardHeader">
                    <h3 class="mb-0">Activation de votre compte</h3>
                </div>
                <div class="cardBody">
                    <div class="text-center mb-4">
                        <h5>Bonjour {{ user.firstName }} {{ user.lastName }}</h5>
                        <p class="text-muted">Veuillez définir votre mot de passe pour activer votre compte</p>
                    </div>

                    {% for message in app.flashes('success') %}
                        <div class="alert alert-success">{{ message }}</div>
                    {% endfor %}
                    
                    {% for message in app.flashes('error') %}
                        <div class="alert alert-danger">{{ message }}</div>
                    {% endfor %}

                    {{ form_start(form) }}
                        <div class="mb-3">
                            {{ form_label(form.password) }}
                            {{ form_widget(form.password.first) }}
                            <small class="form-text text-muted">
                                Minimum 8 caractères avec au moins une minuscule, une majuscule et un chiffre
                            </small>
                        </div>
                        
                        <div class="mb-3">
                            {{ form_label(form.password.second) }}
                            {{ form_widget(form.password.second) }}
                            {{ form_errors(form.password) }}
                        </div>
                        
                        <div class="d-grid">
                            {{ form_widget(form.submit) }}
                        </div>
                    {{ form_end(form) }}
                </div>
                <div class="card-footer text-center">
                    <small class="text-muted">
                        Email : {{ user.email }}
                    </small>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

