{% extends 'base.html.twig' %}

{% block title %}Child{% endblock %}

{% block body %}
    <h1>Child</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ child.id }}</td>
            </tr>
            <tr>
                <th>FirstName</th>
                <td>{{ child.firstName }}</td>
            </tr>
            <tr>
                <th>LastName</th>
                <td>{{ child.lastName }}</td>
            </tr>
            <tr>
                <th>BirthDate</th>
                <td>{{ child.birthDate ? child.birthDate|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>MedicalNotes</th>
                <td>{{ child.medicalNotes }}</td>
            </tr>
            <tr>
                <th>Created_at</th>
                <td>{{ child.createdAt ? child.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_child_index') }}">back to list</a>

    <a href="{{ path('app_child_edit', {'id': child.id}) }}">edit</a>

    {{ include('child/_delete_form.html.twig') }}
