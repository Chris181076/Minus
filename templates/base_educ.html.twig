{# templates/base_educ.html.twig #}
<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Espace Educ{% endblock %}</title>

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Nunito+Sans&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    {% block importmap %}
    {{ importmap('app') }}
    {% endblock %}
</head>

<body>
    {% if is_granted('ROLE_EDUC') %}
    {% include '_partials/_navbar_educ.html.twig' %}
    {% endif %}

    <div class="admin-layout" style="display: flex;">
        {% if no_sidebar is not defined or no_sidebar == false %}
        {% include '_partials/_side_bar_educ.html.twig' %}
        {% endif %}
        
        <main class="main-content" style="flex: 1; padding: 2rem;">
            {% block body %}{% endblock %}
        </main>
    </div>
</body>

</html>