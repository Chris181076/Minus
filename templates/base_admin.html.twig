{# templates/base_admin.html.twig #}
<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Espace Admin{% endblock %}</title>

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Nunito+Sans&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

    {% block stylesheets %}{% endblock %}
    {% block javascripts %}
        {% block importmap %}{{ importmap('app') }}{% endblock %}
    {% endblock %}
</head>

<body>
    {% include '_partials/_navbarAdmin.html.twig' %}
    
    <div class="admin-layout" style="display: flex;">
        {% include '_partials/_side_bar.html.twig' %}

        <main class="main-content" style="flex: 1; padding: 2rem;">
            {% block body %}{% endblock %}
        </main>
    </div>
</body>
</html>
